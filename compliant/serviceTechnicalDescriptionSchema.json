{
  "title": "Service Technical Description Schema: Draft",
  "description": "Draft of the Schema for the Service Technical Description",
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "serviceInterfaces": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ServiceInterface"
      }
    }
  },
  "definitions": {
    "ServiceInterface": {
      "type": "object",
      "required": [
        "name",
        "description"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "reference": {
          "$ref": "#/definitions/Reference"
        },
        "schema": {
          "$ref": "#/definitions/Reference"
        },
        "resources": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Resource"
          }
        },
        "operations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Operation"
          }
        },
        "messages": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Message"
          }
        },
        "binding": {
          "$ref": "#/definitions/Binding"
        },
        "endpoint": {
          "$ref": "#/definitions/Endpoint"
        },
        "messageExchangePattern": {
          "type": "string",
          "enum": [
            "FIRE_AND_FORGET",
            "SYNCHRONOUS_REQUEST_REPLY"
          ]
        }
      }
    },
    "Reference": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "Resource": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "reference": {
          "#ref": "#/definitions/Reference"
        },
        "resourceType": {
          "type": "string"
        },
        "url": {
          "$ref": "#/definitions/Endpoint"
        },
        "operations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "messages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "Operation": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "parameters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Parameter"
          }
        },
        "messages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "binding_method": {
          "$ref": "#/definitions/BindingMethod"
        }
      }
    },
    "Parameter": {
      "type": "object"
    },
    "Message": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "schema": {
          "oneOf": [
            {
              "type": "object",
              "required": [
                "$ref"
              ],
              "properties": {
                "$ref": {
                  "type": "string",
                  "format": "uri-reference"
                }
              }
            },
            {
              "$ref": "#/definitions/Reference"
            }
          ]
        }
      }
    },
    "Endpoint": {
      "type": "string",
      "format": "uri"
    },
    "Binding": {
      "type": "string"
    },
    "BindingMethod": {
      "type": "string"
    }
  }
